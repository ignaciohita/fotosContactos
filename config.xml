<?xml version="1.0" encoding="utf-8" ?>
    <widget id="pro.hita.fotosContactos" version="1.0.0" xmlns="http://www.w3.org/ns/widgets">
        <name>Fotos de Contactos</name>
        <description>Ejemplo del libro: un sistema para acceder a la agenda y modificar las fotos de los contactos</description>
        <author email="ignaciohita@gmail.com" href="http://www.hita.pro">Jose Ignacio Hita Barraza</author>
        <content src="index.html" />

        <plugin name="cordova-plugin-camera" spec="1.2.0" />
        <plugin name="cordova-plugin-contacts" spec="1.1.0" />
        <plugin name="cordova-plugin-dialogs" spec="1.1.1" />

        <platform name="android">
            <allow-intent href="market:*" />
        </platform>

        <platform name="ios">
            <allow-intent href="itms-apps:*" />
        </platform>
    </widget>
